{
    "manifest_version": 3,
    "name": "mlwbd direct name",
    "version": "0.1.0",
    "description": "Get direct download link without redirect from mlwbd",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/icon-16.png",
            "32": "/images/icon-24.png",
            "48": "/images/icon-32.png"
        }
    },
    "permissions": [
        "tabs",
        "activeTab",
        "scripting"
    ]
}